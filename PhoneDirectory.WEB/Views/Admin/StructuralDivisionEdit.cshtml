@model PhoneDirectory.WEB.Models.StructuralDivisionCreateViewModel

@{
    ViewData["Title"] = "Редактировать отдел";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>@ViewData["Title"]</h1>
        <form asp-controller="Admin" asp-action="StructuralDivisionEdit" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StrucDivId" class="control-label"></label>
                @Html.DropDownList("StrucDivId", null, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="StrucDivId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="StrucDivNum" class="control-label">Служебный номер<small class="text-muted">формат 222222</small></label>
                <input asp-for="StrucDivNum" class="form-control" />
                <span asp-validation-for="StrucDivNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="StrucDivNum1" class="control-label">Служебный номер1<small class="text-muted">формат 222222</small></label>
                <input asp-for="StrucDivNum1" class="form-control" />
                <span asp-validation-for="StrucDivNum1" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-controller="Admin" asp-action="StructuralDivisions" role="button" class="btn btn-dark">Отмена</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
